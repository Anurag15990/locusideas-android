<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.locusideas.locusideas">

    <!--TODO create app theme-->
    <application
        android:name="com.android.locusideas.LocusApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="${label}"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="110ef90a866bd74984aa1de0f360dcf51cd3e9c0" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"/>

        <activity
            android:name="com.android.locusideas.auth.AuthActivity"
            >
        </activity>

        <activity
            android:name="com.android.locusideas.auth.signIn.SignInActivity"
            android:label="@string/title_activity_sign_in">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.android.locusideas.auth.AuthActivity" />
        </activity>

        <activity
            android:name="com.android.locusideas.auth.signUp.SignUpActivity"
            android:label="@string/title_activity_sign_up">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.android.locusideas.auth.AuthActivity" />
        </activity>

        <activity
            android:name="com.android.locusideas.home.MainShellActivity">
        </activity>

        <activity
            android:name="com.android.locusideas.SplashScreen.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges=
                "keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            >
        </activity>

        <activity
            android:name="com.android.locusideas.home.projects.project.ProjectActivity"
            android:theme="@style/AppTheme.FitSystemWindows">
        </activity>

        <activity android:name="com.android.locusideas.home.designers.designerProfile.DesignerProfileActivity"></activity>

    </application>

    <uses-permission android:name="android.permission.INTERNET" />
</manifest>
