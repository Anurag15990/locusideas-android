<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleEnabled="false"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <android.support.percent.PercentRelativeLayout
                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="?attr/actionBarSize"
                app:layout_collapseMode="parallax">

                <ImageView
                    android:id="@+id/designer_profile_header_poster"
                    android:src="@drawable/splash_1"
                    android:scaleType="centerCrop"
                    app:layout_widthPercent="100%"
                    app:layout_heightPercent="50%"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/black"
                    android:alpha="0.54"
                    android:layout_alignTop="@+id/designer_profile_header_poster"
                    android:layout_alignBottom="@+id/designer_profile_header_poster"
                    android:layout_alignLeft="@+id/designer_profile_header_poster"
                    android:layout_alignRight="@+id/designer_profile_header_poster"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:id="@+id/designer_profile_img"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="@dimen/spacing_24dp"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/ic_launcher"/>

                    <com.android.locusideas.core.ui.widgets.TextViewPlus
                        android:id="@+id/designer_profile_designer_name"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_below="@+id/designer_profile_img"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/spacing_8dp"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:text="Sharad Vishwakarma">
                    </com.android.locusideas.core.ui.widgets.TextViewPlus>

                    <com.android.locusideas.core.ui.widgets.TextViewPlus
                        android:id="@+id/designer_profile_designer_location"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textSize="16sp"
                        android:text="Mumbai"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="@dimen/spacing_4dp"
                        android:layout_below="@+id/designer_profile_designer_name"/>

                    <ImageView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_location_on_white_24dp"
                        android:layout_below="@+id/designer_profile_designer_name"
                        android:layout_alignBottom="@+id/designer_profile_designer_location"
                        android:layout_alignTop="@+id/designer_profile_designer_location"
                        android:layout_toLeftOf="@+id/designer_profile_designer_location"/>

                    <com.android.locusideas.core.ui.widgets.TextViewPlus
                        android:id="@+id/designer_profile_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/designer_profile_designer_location"
                        android:layout_marginTop="@dimen/spacing_4dp"
                        android:text="Building and Architecture Designs"
                        android:textColor="@android:color/white"/>

                    <View
                        android:id="@+id/center_horizontal"
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="@dimen/spacing_8dp"
                        android:layout_marginRight="@dimen/spacing_8dp">
                    </View>

                    <com.android.locusideas.core.ui.widgets.TextViewPlus
                        android:id="@+id/designer_profile_following"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/designer_profile_description"
                        android:layout_marginTop="@dimen/spacing_8dp"
                        android:layout_toLeftOf="@+id/center_horizontal"
                        android:textSize="12sp"
                        android:text="200 following"
                        android:textColor="@android:color/white"/>

                    <com.android.locusideas.core.ui.widgets.TextViewPlus
                        android:id="@+id/designer_profile_followers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/designer_profile_description"
                        android:layout_marginTop="@dimen/spacing_8dp"
                        android:layout_toRightOf="@+id/center_horizontal"
                        android:textSize="12sp"
                        android:text="20 followwers"
                        android:textColor="@android:color/white"/>

                    <com.android.locusideas.core.ui.widgets.TextViewPlus
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Follow"
                        android:textColor="@android:color/white"
                        android:paddingTop="@dimen/spacing_8dp"
                        android:paddingBottom="@dimen/spacing_8dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/spacing_8dp"
                        android:drawablePadding="@dimen/spacing_4dp"
                        android:drawableLeft="@drawable/ic_person_add_white_24dp"
                        android:layout_below="@+id/designer_profile_followers"
                        android:clickable="true"
                        android:background="@drawable/selector_button_primary_color"/>

                </RelativeLayout>

            </android.support.percent.PercentRelativeLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimary"
                app:theme="@style/AppTheme"
                app:layout_collapseMode="pin">

                <com.android.locusideas.core.ui.widgets.TextViewPlus
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Sharad Vishwakarma"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/designer_profile_toolbar_title_text_size"
                    app:customFont="@string/font_montserrat_extrabold"/>

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

</android.support.design.widget.CoordinatorLayout>