<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/project_title_avatar"
            android:layout_width="@dimen/card_avatar_size"
            android:layout_height="@dimen/card_avatar_size"
            android:scaleType="fitCenter"
            android:layout_margin="@dimen/card_title_padding"/>

        <com.android.locusideas.core.ui.widgets.TextViewPlus
            android:id="@+id/project_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/project_title_avatar"
            android:layout_alignTop="@+id/project_title_avatar"
            android:textSize="@dimen/card_title_text_size"
            android:layout_marginRight="@dimen/card_title_padding"
            android:maxLines="1"
            />

        <com.android.locusideas.core.ui.widgets.TextViewPlus
            android:id="@+id/project_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/project_title_avatar"
            android:layout_below="@+id/project_title"
            android:textSize="@dimen/card_title_text_size"
            android:layout_marginBottom="@dimen/card_title_padding"
            android:maxEms="20"
            android:maxLines="1"
            android:layout_marginRight="@dimen/card_title_padding"
            android:ellipsize="end"/>

        <ImageView
            android:id="@+id/project_image"
            app:layout_widthPercent="100%"
            app:layout_aspectRatio="178%"
            android:scaleType="centerCrop"
            android:layout_below="@+id/project_title_avatar"/>

        <ImageView
            android:id="@+id/project_action_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/project_image"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/card_action_padding"
            android:padding="@dimen/card_action_padding"/>

    </android.support.percent.PercentRelativeLayout>

</android.support.v7.widget.CardView>